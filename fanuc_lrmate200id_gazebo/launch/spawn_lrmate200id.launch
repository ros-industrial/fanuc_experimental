<?xml version="1.0"?>
<launch>
  <!-- send robot urdf to ROS param server -->
  <include file="$(find fanuc_lrmate200id_gazebo)/launch/load_lrmate200id.launch" />

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" 
        output="screen" respawn="false"
        args="-urdf
              -param robot_description
              -model fanuc_lrmate200id
              -x 0.0
              -y 0.0
              -z 0.0
              -R 0.0
              -P 0.0
              -Y 0.0" />

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

  <!-- init and start Gazebo ros_control interface  -->
  <include file="$(find fanuc_lrmate200id_gazebo)/launch/lrmate200id_control.launch"/>
 
</launch>